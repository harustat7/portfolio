        <div class="heading w-full h-[100px] text-[#293462] flex items-center justify-center border-[1px] border-gray-300">
            <h1 class="text-3xl font-semibold tracking-wide">CONTACT</h1>
        </div>

        <!-- Map Container -->
        <div class="relative w-full h-64 sm:h-80 md:h-96 bg-white mb-8 overflow-hidden shadow-md rounded max-w-6xl mx-auto px-4 py-3">
            <!-- Map with Ludhiana location -->
            <div id="map" class="w-full h-full">
                <iframe 
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d109552.19658822962!2d75.7882486954403!3d30.900331040312337!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x391a837462345a7d%3A0x681102348ec60610!2sLudhiana%2C%20Punjab!5e0!3m2!1sen!2sin!4v1710691172015!5m2!1sen!2sin" 
                    width="100%" 
                    height="100%" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy" 
                    referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
            
            <!-- Map Overlay -->
            <div class="absolute top-5 left-5 bg-white bg-opacity-90 p-4 rounded shadow-md">
                <h3 class="font-bold text-navy text-sm sm:text-base">Ludhiana</h3>
                <p class="text-navy opacity-70 text-xs sm:text-sm">Punjab</p>
            </div>
            
            <!-- Direction Button -->
            <div class="absolute bottom-5 left-5 bg-white bg-opacity-90 p-2 rounded shadow-md cursor-pointer hover:bg-opacity-100">
                <a href="https://www.google.com/maps/dir//Ludhiana,+Punjab/@30.9003396,75.7882487,12z/data=!4m9!4m8!1m0!1m5!1m1!1s0x391a837462345a7d:0x681102348ec60610!2m2!1d75.8572758!2d30.900965!3e0" target="_blank" class="text-xs sm:text-sm text-navy">Directions</a>
            </div>
            
            <!-- View Larger Map Button -->
            <div class="absolute bottom-5 right-5 sm:left-32 sm:right-auto bg-white bg-opacity-90 p-2 rounded shadow-md cursor-pointer hover:bg-opacity-100">
                <a href="https://www.google.com/maps/place/Ludhiana,+Punjab/@30.9003396,75.7882487,12z/data=!4m6!3m5!1s0x391a837462345a7d:0x681102348ec60610!8m2!3d30.900965!4d75.8572758!16zL20vMDIzOWtz" target="_blank" class="text-xs sm:text-sm text-navy">View larger map</a>
            </div>
        </div>       

        <div class="contact-form max-w-6xl mx-auto px-4 py-3 pb-20 md:pb-8">
        <!-- Contact Form Section -->
        <h2 class="text-xl sm:text-2xl font-sans font-semibold mb-4 sm:mb-6 text-navy">CONTACT FORM</h2>
        <form action="/submit-form" method="POST" class="w-full">
            <div class="flex flex-col md:flex-row gap-4 sm:gap-6 mb-4 sm:mb-6">
                <!-- Name Input -->
                <div class="w-full md:w-1/2">
                    <input 
                        type="text" 
                        name="fullname" 
                        placeholder="Full name" 
                        class="w-full p-3 sm:p-4 bg-inputbg rounded border border-gray-200 focus:outline-none focus:border-navy text-navy text-sm sm:text-base"
                        required
                    >
                </div>
                
                <!-- Email Input -->
                <div class="w-full md:w-1/2">
                    <input 
                        type="email" 
                        name="email" 
                        placeholder="Email address" 
                        class="w-full p-3 sm:p-4 bg-inputbg rounded border border-gray-200 focus:outline-none focus:border-navy text-navy text-sm sm:text-base"
                        required
                    >
                </div>
            </div>
            
            <!-- Message Textarea -->
            <div class="mb-4 sm:mb-6">
                <textarea 
                    name="message" 
                    placeholder="Your Message" 
                    rows="6" 
                    class="w-full p-3 sm:p-4 bg-inputbg rounded border border-gray-200 focus:outline-none focus:border-navy text-navy text-sm sm:text-base"
                    required
                ></textarea>
            </div>
            
            <!-- Submit Button -->
            <div class="flex justify-end">
                <button 
                    type="submit" 
                    class="bg-navy hover:bg-opacity-90 text-white px-4 sm:px-6 py-2 sm:py-3 rounded flex items-center shadow-md text-sm sm:text-base"
                >
                    <span class="mr-2">Send Message</span>
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
        </form>
        </div>
    </div>

    <!-- Optional: Add simple JavaScript to ensure map works -->
    <script>
        // Check if the map iframe loaded correctly
        document.addEventListener('DOMContentLoaded', function() {
            const mapFrame = document.querySelector('#map iframe');
            
            mapFrame.addEventListener('load', function() {
                console.log('Map loaded successfully');
            });
            
            mapFrame.addEventListener('error', function() {
                console.error('Map failed to load');
                // Fallback message if map doesn't load
                document.getElementById('map').innerHTML = '<div class="flex items-center justify-center h-full bg-gray-100"><p class="text-navy">Map of Ludhiana, Punjab</p></div>';
            });
        });
    </script>
